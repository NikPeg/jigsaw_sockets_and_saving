<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.canvas.Canvas?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="jigsaw.sockets.jigsaw_sockets.UserLoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label fx:id="hostText" text="Enter server's host:"/>
    <TextField fx:id="hostField" text="localHost"/>
    <Label fx:id="portText" text="Enter server's port:"/>
    <TextField fx:id="portField" text="3456"/>
    <Button fx:id="startButton" text="Connect to server" onAction="#onStartButtonClick"/>

</VBox>
