<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="jigsaw.sockets.jigsaw_sockets.ServerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="playersText" text="Enter players count:"/>
    <TextField fx:id="playersCount" text="3"/>

    <Label fx:id="timeText" text="Enter max playing time:"/>
    <TextField fx:id="timeField" text="60"/>

    <Label fx:id="readyText"/>
    <Button fx:id="startButton" text="Start server" onAction="#onStartButtonClick"/>

</VBox>
